{
  "name": "wishlist-wow-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Wishlist WOW - Frontend (Next.js) and Backend (Go)",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && go run cmd/api/main.go",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && go build -o main cmd/api/main.go",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && ./main",
    "db:up": "docker-compose -f docker-compose.db.yml up -d",
    "db:down": "docker-compose -f docker-compose.db.yml down",
    "db:logs": "docker-compose -f docker-compose.db.yml logs -f",
    "db:reset": "docker-compose -f docker-compose.db.yml down -v && docker-compose -f docker-compose.db.yml up -d",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "ejecutar-todo": "npm run db:up && npm run dev",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && go mod download",
    "install:all": "npm run install:frontend && npm run install:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "rm -rf frontend/.next frontend/node_modules backend/main"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "go": ">=1.21.0"
  },
  "workspaces": [
    "frontend"
  ]
}